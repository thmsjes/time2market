<p id="notice"><%= notice %></p>

<h1>Current Vehicles in process</h1>

<table>
  <thead>
    <tr>
      <th>Stock Number</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.stock_number %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= link_to 'Details', vehicle %></td>
        <td><%= link_to 'Process', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Complete', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

